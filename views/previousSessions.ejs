<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/style.css" />
    <title>Sessions</title>
    <script>
      function deleteSport(id) {
        fetch(`/sport/${id}`, {
          method: "delete",
        })
          .then((res) => {
            if (res.ok) {
              window.location.href = "/";
            }
          })
          .catch((err) => console.error(err));
      }
    </script>
  </head>
  <body>
    <div class="grid grid-cols-6 pt-10">
      <div class="col-start-3 col-span-2">
        <span class="text-4xl font-semibold text-gray-600"><%= title %></span
        ><span>
          <a
            class="bg-cyan-600 hover:bg-cyan-800 text-white px-3 py-1 rounded font-medium ml-5 mb-5"
            href="/sport"
            >Home</a
          >
        </span>
        <br />
        <div>
          <h1 class="my-3 text-2xl font-bold text-gray-600">
            Previous sessions (<%=previousSessions.length %>)
          </h1>
          <table>
            <h5 class="my-3">
              <%=previousSessions.length %> sessions Available
            </h5>
            <% for( var i = 0 ; i < previousSessions.length ; i++) { %>
            <tr>
              <td>
                <a
                  href="/sessions/<%=previousSessions[i].id %>"
                  class="text-green-600"
                >
                  <div
                    class="my-1.5 bg-white hover:bg-stone-50 border border-gray-600 text-green-600 font-semibold rounded p-2 my-0.5 w-full"
                  >
                    <div class="mr-18 display: inline">
                      <%=previousSessions[i].playDate.toString().substring(0,25)%>
                    </div>
                    <% if (previousSessions[i].playersneeded>1) { %>
                    <div class="pl-5 pr-2 display: inline">
                      <%=previousSessions[i].playersneeded %> slots
                    </div>
                    <% } %> <% if (previousSessions[i].playersneeded===1) { %>
                    <div class="text-red-600 pl-5 pr-2 display: inline">
                      Last slot
                    </div>
                    <% } %> <% if (previousSessions[i].playersneeded ===0) { %>
                    <div
                      class="text-green-1000 font-bold pl-5 pr-2 display: inline"
                    >
                      Fully Booked
                    </div>
                    <% } %>
                  </div>
                </a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
        <div>
          <br />
          <a
            class="bg-red-600 hover:bg-red-800 text-white px-3 py-1 rounded font-medium mb-5"
            href="/signout"
            >Signout</a
          >
        </div>
      </div>
    </div>
  </body>
</html>
