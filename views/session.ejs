<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/style.css" />
    <title>Sessions</title>
    <script>
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      function deleteSport(id) {
        fetch(`/sport/${id}`, {
          method: "delete",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.href = "/sport";
            }
          })
          .catch((err) => console.error(err));
      }
    </script>
  </head>

  <body>
    <div class="grid grid-cols-6 pt-10">
      <div class="col-start-3 col-span-2">
        <div class="text-3xl font-semibold text-gray-600"><%= title %></div>
        <br />
        <% if (isAdmin) { %>
        <a href="/sport/<%= sportId %>/edit" class="text-green-600 underline"
          >Edit Sport
        </a>
        <br />
        <br />
        <a
          href="/sport"
          class="text-green-600 underline"
          onclick="deleteSport(<%= sportId %>)"
          >Delete Sport
        </a>
        <br />
        <br />
        <% } %>
        <a
          href="/sport/<%= sportId %>/new_session"
          class="text-green-600 underline"
          >create session</a
        >
        <br />
        <br />

        <a
          href="/sport/<%= sportId %>/prev_sessions"
          class="text-green-600 underline"
          >view previous sessions</a
        >

        <br />
        <br />

        <a
          href="/sport/<%= sportId %>/canceled_sessions"
          class="text-green-600 underline"
          >view canceled sessions</a
        >

        <br />
        <br />
        <div>
          <h1 class="text-xl font-semibold text-gray-600">Upcoming sessions</h1>
          <table>
            sportId : <%= sportId %>
            <br />
            <%=upcomingSessions.length %> sessions Available<% for( var i=0 ; i
            < upcomingSessions.length ; i++) { %>
            <tr>
              <td>
                <div
                  class="border border-gray-600 text-gray-900 rounded p-2 w-full"
                >
                  <a
                    href="/sessions/<%=upcomingSessions[i].id %>"
                    class="text-green-600"
                  >
                    <div class="mr-18 display: inline">
                      <%=upcomingSessions[i].playDate.toString().substring(0,25)%>
                    </div>
                    <% if (upcomingSessions[i].playersneeded>1) { %>
                    <div class="pl-5 pr-2 display: inline">
                      <%=upcomingSessions[i].playersneeded %> slots
                    </div>
                    <% } %> <% if (upcomingSessions[i].playersneeded===1) { %>
                    <div class="text-red-600 pl-5 pr-2 display: inline">
                      Last slot
                    </div>
                    <% } %> <% if (upcomingSessions[i].playersneeded===0) { %>
                    <div class="text-black-600 pl-5 pr-2 display: inline">
                      Fully Booked
                    </div>
                    <% } %>
                  </a>
                </div>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
        <div>
          <br />
          <a
            class="bg-blue-600 text-white px-3 py-1 rounded font-medium mr-2 mb mt-5"
            href="/signout"
            >Signout</a
          >
        </div>
        <div>
          <br />
          <a
            class="bg-blue-600 text-white px-3 py-1.5 rounded font-medium mr-2 mb"
            href="/sport"
            >Home</a
          >
        </div>
      </div>
    </div>
  </body>
</html>
