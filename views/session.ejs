<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/style.css" />
    <title>Sessions</title>
    <script>
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      function deleteSport(id) {
        fetch(`/sport/${id}`, {
          method: "delete",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.href = "/sport";
            }
          })
          .catch((err) => console.error(err));
      }
    </script>
  </head>

  <body>
    <div class="grid grid-cols-6 pt-10">
      <div class="col-start-3 col-span-2">
        <span class="text-4xl font-semibold text-gray-600"><%= title %></span>
        <span>
          <a
            class="bg-cyan-600 hover:bg-cyan-800 text-white px-3 py-1 rounded font-medium ml-5 mb-3"
            href="/sport"
            >Home</a
          >
        </span>
        <% if (isAdmin) { %>

        <span>
          <a
            href="/sport/<%= sportId %>/edit"
            class="bg-cyan-600 hover:bg-cyan-800 text-white px-3 py-1 rounded font-medium ml-2 mb-3"
          >
            <span> Edit Sport </span></a
          >
        </span>
        <span>
          <a
            href="/sport"
            class="bg-cyan-600 hover:bg-cyan-800 text-white px-3 py-1 rounded font-medium ml-2 mb-3"
            onclick="deleteSport(<%= sportId %>)"
            >Delete Sport
          </a></span
        >

        <% } %>
        <hr class="my-5 h-0.5 bg-black opacity-50" />
        <div>
          <h1 class="mt-5 text-2xl font-semibold text-gray-600">
            Upcoming sessions (<%= upcomingSessions.length %>)
          </h1>
          <table>
            <br />
            <% if(upcomingSessions.length===0) { %>
            <h5 class="text-grey">
              There are no upcoming Sessions available to Join. Do you want to
              create one ?
            </h5>
            <% } %> <% if(upcomingSessions.length!=0) { %>
            <%=upcomingSessions.length %> sessions Available<% for( var i=0 ; i
            < upcomingSessions.length ; i++) { %>
            <tr>
              <td>
                <div
                  class="border border-gray-600 text-gray-900 rounded p-2 w-full"
                >
                  <a
                    href="/sessions/<%=upcomingSessions[i].id %>"
                    class="text-green-600"
                  >
                    <div class="mr-18 display: inline">
                      <%=upcomingSessions[i].playDate.toString().substring(0,25)%>
                    </div>
                    <% if (upcomingSessions[i].playersneeded>1) { %>
                    <div class="pl-5 pr-2 display: inline">
                      <%=upcomingSessions[i].playersneeded %> slots
                    </div>
                    <% } %> <% if (upcomingSessions[i].playersneeded===1) { %>
                    <div class="text-red-600 pl-5 pr-2 display: inline">
                      Last slot
                    </div>
                    <% } %> <% if (upcomingSessions[i].playersneeded===0) { %>
                    <div class="text-black-600 pl-5 pr-2 display: inline">
                      Fully Booked
                    </div>
                    <% } %>
                  </a>
                </div>
              </td>
            </tr>
            <% } %> <% } %>
          </table>
        </div>
        <br />
        <span class="mt-5 mr-5">
          <a
            href="/sport/<%= sportId %>/new_session"
            class="bg-cyan-600 hover:bg-cyan-800 text-white px-3 py-1 rounded font-medium mr-2 mb mt-5"
            >create a new session</a
          >
        </span>
        <span class="mt-5 mr-5">
          <a
            href="/sport/<%= sportId %>/prev_sessions"
            class="bg-violet-600 hover:bg-violet-800 text-white px-3 py-1 rounded font-medium mr-2 mb mt-5"
            >view previous sessions</a
          >
        </span>
        <div>
          <br />
          <a
            class="bg-red-600 hover:bg-red-800 text-white px-3 py-1 rounded font-medium mr-2 mb mt-5"
            href="/signout"
            >Signout</a
          >
        </div>
        <div>
          <br />
        </div>
      </div>
    </div>
  </body>
</html>
