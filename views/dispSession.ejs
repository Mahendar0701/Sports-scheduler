          })
          .catch((err) => console.error(err));
      }  */

      function displayReasonField() {
        document.getElementById("reasonField").style.display = "block";
      }
    </script>
  </head>

  <body>
    <nav class="shadow-md top-0 opacity-100 bg-stone-100 border-gray-200">
      <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
      >
        <a href="/sport" class="flex items-center">
          <img
            src="https://png.pngtree.com/png-clipart/20210711/original/pngtree-sports-icon-design-with-human-shape-running-png-image_6524332.jpg"
            class="h-10 mr-3"
            alt="Flowbite Logo"
          />
          <span
            class="self-center text-2xl font-semibold whitespace-nowrap dark:text-grey-900"
            >Sports Scheduler</span
          >
        </a>

        <div class="flex items-center md:order-2">
          <% if (isAdmin) { %>
          <a
            href="/createSport"
            class="bg-cyan-600 hover:bg-cyan-800 text-white px-3 py-1.5 rounded font-medium mx-5 my-0.5"
            >+ Create New Sport</a
          >
          <% } %> <% if (!isAdmin) { %>
          <span class="text-grey-900 px-3 py-1.5 mx-7 my-0.5 font-bold">
            <%= userName %>
          </span>
          <% } %>
          <button
            type="button"
            class="flex mr-3 text-sm rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600"
            id="user-menu-button"
            aria-expanded="false"
            data-dropdown-toggle="user-dropdown"
            data-dropdown-placement="bottom"
          >
            <span class="sr-only"></span>
            <img
              class="w-8 rounded-full"
              src="https://p7.hiclipart.com/preview/782/114/405/5bbc3519d674c.jpg"
              alt="user photo"
            />
          </button>
        </div>

        <div
          class="items-center justify-around hidden w-full md:flex md:w-auto md:order-1"
          id="mobile-menu-2"
        >
          <ul
            class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-stone-100 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-stone-100 dark:bg-stone-100 md:dark:bg-stone-100 dark:border-gray-700"
          >
            <li>
              <a
                href="/sport"
                class="block py-2 pl-3 pr-4 text-grey-800 bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500"
                aria-current="page"
                >Home</a
              >
            </li>
            <li>
              <a
                href="/my_sessions"
                class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
                >My Sessions</a
              >
            </li>
            <% if (isAdmin) { %>
            <li>
              <a
                href="/reports"
                class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
                >View Reports</a
              >
            </li>
            <% } %>
            <li>
              <a
                href="/changePassword"
                class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
                >Change Password</a
              >
            </li>
            <li>
              <a
                href="/signout"
                class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-red-700 md:p-0 md:dark:hover:text-red-600 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
                >Sign Out</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="grid grid-cols-6 pt-10">
      <div class="col-start-2 col-span-5">
        <div>
          <h1 class="text-3xl font-semibold text-gray-600">
            <%= title %> session #<%= sessionId %>
          </h1>
          <p class="my-5 text-xl">
            This session is scheduled for <%=
            session.playDate.toLocaleString('en-US', { weekday: 'long' , month:
            'long' , day: 'numeric' , year: 'numeric' , hour: 'numeric' ,
            minute: 'numeric' , hour12: true }) %> , to be played at " <%=
            session.venue %>"
          </p>
          <p class="my-5 text-xl">
            This session is created by : <%= creatorName %>
          </p>
          <h1 class="text-2xl font-semibold text-gray-600">
            Players (<%= session.playernames.length %>)
          </h1>
          <ul class="mt-5 list-none display:inline">
            <li>
              <% for( var i=0 ; i < session.playernames.length ; i++) { %> <%
              if((session.playernames[i]===userName) &&
              (session.playernames[i]===creatorName)) { %>
              <div
                class="border border-gray-600 text-teal-800 font-semibold rounded p-2 my-2 w-40 display:inline"
              >
                You
                <p class="font-light">organizer</p>
                <% if (isCreator && session.isCanceled===false && isPrevious
                ===false ) { %>

                <form
                  action="/sessions/<%= sessionId %>/removePlayer/<%=session.playernames[i]%>"
                  method="post"
                >
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <button type="submit">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="svg-inline w- h-4 inline"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                      />
                    </svg>
                  </button>
                </form>
                <% } %>
              </div>
              <% } %> <% if((session.playernames[i]===userName) &&
              (session.playernames[i]!=creatorName)) { %>
              <div
                class="border border-gray-600 text-teal-800 font-semibold rounded p-2 my-2 w-40 display:inline"
              >
                You
              </div>
              <% } %> <% if((session.playernames[i]===creatorName) &&
              (session.playernames[i]!=userName)) { %>
              <div
                class="border border-gray-600 text-teal-800 font-semibold rounded p-2 my-2 w-40 display:inline"
              >
                <%=session.playernames[i]%>
                <p class="font-light">organizer</p>
              </div>
              <% } %> <% if((session.playernames[i]!=userName) &&
              (session.playernames[i]!=creatorName) ) { %>

              <div
                class="border border-gray-600 text-teal-800 font-semibold rounded p-2 w-40 my-2 display:inline"
              >
                <%=session.playernames[i]%> <% if (isCreator &&
                session.isCanceled===false && isPrevious ===false ) { %>

                <form
                  action="/sessions/<%= sessionId %>/removePlayer/<%=session.playernames[i]%>"
                  method="post"
                >
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <button type="submit">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="svg-inline w- h-4 inline"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                      />
                    </svg>
                  </button>
                </form>
                <% } %>
              </div>
              <% } %> <% } %>
            </li>
          </ul>

          <% if ( isJoined===true) { %>
          <div>
            <h5 class="my-5 text-xl">
              You <% if ( isPrevious) { %>were <% } %> <% if ( !isPrevious) {
              %>are <% } %> a <% if ( !isCreator) { %>participitant in<% } %> <%
              if ( isCreator) { %> organizer of<% } %> this Session
            </h5>
          </div>

          <% } %> <% if (((session.playersneeded)>0 && session.isCanceled ===
          false && isPrevious === false) || ((session.playersneeded)>0 &&
          isPrevious === false )) { %> <% if (isJoined===false &&
          allowToJoin===true) { %>
          <form
            id="joinForm"
            action="/sessions/<%= sessionId %>/join"
            method="POST"
          >
            <h3 class="my-5">Click Join to join the session</h3>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button
              type="submit"
              class="border border-gray-600 text-white bg-cyan-600 hover:bg-cyan-800 font-medium rounded px-1.5 py-1"
            >
              + Join Session
            </button>
          </form>
          <br />
          <% } %> <% } %> <% if (allowToJoin===false &&
          userJoinedSession.isCanceled===false && isJoined===false) { %>
          <h3 class="text-xl">
            You Can't join this session as you have the following Session at the
            same time
          </h3>
          <div>
            <table>
              <br />

              <tr>
                <td>
                  <div
                    class="border border-gray-600 text-gray-900 rounded p-2 w-full"
                  >
                    <a
                      href="/sessions/<%=userJoinedSession.id %>"
                      class="text-green-600"
                    >
                      <div class="mr-18 display: inline">
                        <%=userJoinedSession.playDate.toString().substring(0,25)%>
                      </div>
                      <% if (userJoinedSession.playersneeded>1) { %>
                      <div class="pl-5 pr-2 display: inline">
                        <%=userJoinedSession.playersneeded %> slots
                      </div>
                      <% } %> <% if (userJoinedSession.playersneeded===1) { %>
                      <div class="text-red-600 pl-5 pr-2 display: inline">
                        Last slot
                      </div>
                      <% } %> <% if (userJoinedSession.playersneeded===0) { %>
                      <div
                        class="text-green-1000 font-bold pl-5 pr-2 display: inline"
                      >
                        Fully Booked
                      </div>
                      <% } %>
                    </a>
                  </div>
                </td>
              </tr>
              <% } %>
            </table>
          </div>
          <% if ((session.playersneeded)==0 && isJoined===true &&
          isPrevious===false && session.isCanceled===false ) { %>
          <div class="text-xl my-2">This Session is Fully booked</div>
          <% } %> <% if (isJoined && isPrevious===false &&
          session.isCanceled===false ) { %>
          <h5 class="mt-4">Do You Want to leave this session ?</h5>
          <form action="/sessions/<%= sessionId %>/leave" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button
              type="submit"
              class="bg-slate-100 hover:bg-slate-200 text-grey-900 px-3 py-1 rounded font-medium mr-2 mb mt-5"
            >
              leave session
            </button>
          </form>
          <% } %> <% if ((session.playersneeded)==0 && isJoined===false) { %>
          <div class="text-xl">
            This session is Fully Booked. No slots available
          </div>
          <% } %> <% if ( isCreator && session.isCanceled===false && isPrevious
          ===false) { %>
          <div class="my-3">
            <a
              href="/sessions/<%= session.id %>/edit"
              class="bg-slate-100 hover:bg-slate-200 text-cyan-900 px-3 py-1 rounded font-medium mr-2 mb mt-5"
            >
              Edit session
            </a>
          </div>
          <div>
            <% if ((session.isCanceled===false) && (isCreator)) { %>
            <form action="/sessions/<%= sessionId %>/cancel" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button
                type="button"
                class="bg-slate-100 hover:bg-slate-200 text-red-600 px-3 py-1 rounded font-medium mr-2 mb mt-5"
                onclick="displayReasonField()"
              >
                Cancel session
              </button>
              <br />
              <br />
              <div id="reasonField" style="display: none">
                <textarea
                  name="reason"
                  class="border border-gray-600 p-2 rounded"
                  rows="4"
                  cols="50"
                ></textarea>
                <br />
                <button
                  type="submit"
                  class="bg-slate-100 hover:bg-slate-200 text-red-700 px-3 py-1 rounded font-medium mr-2 mb mt-5"
                >
                  Confirm Cancellation
                </button>
              </div>
            </form>
            <% } %>
          </div>
          <% } %> <% if (session.isCanceled===true) { %>
          <div class="my-5">
            <h5 class="text-xl text-red-500">
              This session is canceled due to :
            </h5>
            <h5 class="text-xl"><%= reason %></h5>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
